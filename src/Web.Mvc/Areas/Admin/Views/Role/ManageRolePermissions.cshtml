@model Core.Application.Contracts.DataTransferObjects.ManageRolePermissionsDto
@{
    ViewData["Title"] = "Role Permissions";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <form asp-action="ManageRolePermissions" method="get">
            <h3 class="card-title">Manage Permissions for Role: <b>@Model.RoleName</b></h3>
            <div class="float-right">
                <p>
                    Find by name: <input type="text" name="permissionValue" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <input asp-for="RoleId" type="hidden"/>
                    <a asp-action="ManageRolePermissions" asp-route-roleId="@Model.RoleId">Back to Full List</a>
                </p>
            </div>
        </form>
    </div>
    <form method="post" asp-action="ManageRolePermissions" class="d-inline">
        
        <div class="card-body">
            <input asp-for="@Model.RoleId" type="hidden"/>
            <input asp-for="@Model.RoleName" type="hidden"/>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        Permission Name
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
                </thead>
                <tbody>
                @for (var i = 0; i < Model.ManagePermissionsDto.Data.Count(); i++)
                {
                    <tr>
                        <td class="text-center">
                            <input asp-for="@Model.ManagePermissionsDto.Data[i].Type" type="hidden" />
                            @Model.ManagePermissionsDto.Data[i].Type
                        </td>
                        <td class="text-center">
                            <input asp-for="@Model.ManagePermissionsDto.Data[i].Value" type="hidden" />
                            @Model.ManagePermissionsDto.Data[i].Value
                        </td>
                        <td>

                            <div class="form-check m-1">
                                <input asp-for="@Model.ManagePermissionsDto.Data[i].Checked" class="form-check-input" />
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="card-footer clearfix">
            @{
                var prevDisabled = !Model.ManagePermissionsDto.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.ManagePermissionsDto.HasNextPage ? "disabled" : "";
            }
            <div class="row">
                <div class="col-sm-9">
                    <ul class="pagination float-right">
                        <li>
                            <a asp-action="ManageRolePermissions"
                               asp-route-roleId="@Model.RoleId"
                               asp-route-pageNumber="@(Model.ManagePermissionsDto.PageIndex - 1)"
                               class="btn btn-default @prevDisabled">
                                Previous
                            </a>
                        </li>
                        @for (var i = 1; i <= Model.ManagePermissionsDto.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.ManagePermissionsDto.PageIndex ? "active" : "")" style="z-index: 0;">
                                <a asp-action="ManageRolePermissions"
                                   asp-route-roleId="@Model.RoleId"
                                   asp-route-pageNumber="@i"
                                   class="page-link">@i</a>
                            </li>
                        }
                        <li>
                            <a asp-action="ManageRolePermissions"
                               asp-route-roleId="@Model.RoleId"
                               asp-route-pageNumber="@(Model.ManagePermissionsDto.PageIndex + 1)"
                               class="btn btn-default @nextDisabled">
                                Next
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-3" style="padding: 20px 20px 0px 0px">
                    <button type="submit" id="save" class="btn bg-primary">
                        <i class="fa fa-check"></i>
                        Save
                    </button>
                </div>
            </div>


            
        </div>
    </form>
</div>

